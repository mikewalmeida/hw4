<div class="container">
  <h1><%= @place["name"] %></h1>



  <p>
    <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>


  <div class="row">
      <% for post in @posts %>
        <div class="col-md-4 col-sm-6">
          <h3><%= post["title"] %></h3>
          <img src="https://i.pinimg.com/564x/a0/da/1e/a0da1e637f5f961737de9a7db2a56360.jpg" >
          <h4><%= post["posted_on"] %></h4>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
  </div>

  <p>
    <a class="btn btn-primary btn-sm" href="/places">Back to All Places</a>
  </p>

</div>