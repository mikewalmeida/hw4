<div class="container">
  <h1><%= @place["name"] %></h1>



  <p>
    <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
  </p>


  <div class="row">
      <% for post in @posts %>
        <div class="col-md-4 col-sm-6">
          <h1><%= post["title"] %></h1>
          <p><%= post["posted_on"] %></p>
          <% if post.uploaded_image.attached? %>
            <image src="<%=(url_for(post.uploaded_image))%>" class="img-fluid">
            <% post["uploaded_image"]%>
          <% else %>
            No Image
          <% end %>

          <h4 class="mt-3"><%= post["description"] %></h4>
        </div>
      <% end %>
  </div>
 

  <p>
    <a class="btn btn-primary btn-sm" href="/places">Back to All Places</a>
  </p>

</div>